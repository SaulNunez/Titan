<Page
    x:Class="Titan.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Titan"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical">
        <CommandBar>
            <AppBarButton x:Name="FilterByDate" Icon="Filter" Label="Filter by date" LabelPosition="Collapsed" />
            <AppBarButton x:Name="Export" Icon="Save" Label="Export data" LabelPosition="Collapsed" />
            <AppBarButton x:Name="Delete" Icon="Delete" Label="Delete all history" LabelPosition="Collapsed" />
        </CommandBar>
        <ListView x:Name="History">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Hello" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
